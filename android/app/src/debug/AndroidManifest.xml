<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bldevice_connection">
    <!-- The INTERNET permission is required for development. Specifically,
         the Flutter tool needs it to communicate with the running application
         to allow setting breakpoints, to provide hot reload, etc.
    -->
    <uses-permission android:name="androidx.permission.BLUETOOTH" android:maxSdkVersion="30" />
    <uses-permission android:name="androidx.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30" />
    <uses-permission android:name="androidx.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="androidx.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="androidx.permission.BLUETOOTH_ADVERTISE" />
    <uses-permission android:name="androidx.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="androidx.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="androidx.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>
    <uses-permission android:name="androidx.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="androidx.permission.INTERNET"/>
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />
</manifest>
